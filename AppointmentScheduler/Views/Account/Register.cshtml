@model AppointmentScheduler.Models.ViewModels.RegisterViewModel

    <h2>Sign Up</h2>
    <form asp-action="Register" asp-controller="Account" method="post">
        <h5>Create new account.</h5>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <label asp-for="Name" class="col-md-2"></label>
            <div class="col-md-10">
                <input class="form-control" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Email" class="col-md-2"></label>
            <div class="col-md-10">
                <input class="form-control" asp-for="Email" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="RoleType" class="col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="RoleType" asp-items="@AppointmentScheduler._Utilities.Helper.DropDown_GetRoles()" class="form-control">
                    <option selected>-- Select Role --</option>
                </select>
                @*<input class="form-control" asp-items="@AppointmentScheduler._Utilities.Helper.DropDown_GetRoles()" asp-for="RoleType" />*@
                <span class="text-danger" asp-validation-for="RoleType"></span>
            </div>

        </div>

        <div class="form-group row">
            <label asp-for="Password" class="col-md-2"></label>
            <div class="col-md-10">
                <input class="form-control" asp-for="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="ConfirmPassword" class="col-md-2"></label>
            <div class="col-md-10">
                <input class="form-control" asp-for="ConfirmPassword" />
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-10 offset-md-2">
                <input type="submit" value="Register" class="btn btn-success" />
            </div>
        </div>
        <p class="col-md-10 offset-md-2">
            <a asp-action="Login">Sign in</a>
        </p>
    </form>

